execute pathogen#infect()
colorscheme solarized
set nocompatible
syntax on
set pastetoggle=<F8>
map <F9> :setlocal spell! spelllang=en_us<CR>
filetype plugin on
set ts=2
set sw=2
set bs=2
set expandtab
set ai
set hlsearch
source  ~/.vim/indent/cpp.vim
set tw=180
set backupdir=~/.vim/backup
set undodir=~/.vim/undo
set backup
